# DOMINI (Solo per riferimento, usa la GUI per mapparli)
DOMAIN=tuosito.com

# VERSIONE PHP E MODULI
PHP_VERSION=8.3
# Aggiungi qui moduli extra se servono (es: soap bcmath)
PHP_EXTRA_EXTENSIONS=

# DATABASE
DB_NAME=wordpress
DB_USER=wordpress
DB_PASS=ScegliUnaPasswordSicura
DB_ROOT_PASS=ScegliPasswordRoot

# LIMITI PHP (Opzionali, usano questi default se vuoti)
PHP_MEMORY_LIMIT=512M
PHP_UPLOAD_LIMIT=128M
PHP_POST_LIMIT=128M
PHP_MAX_TIME=300
PHP_MAX_INPUT_VARS=5000

# CONFIGURAZIONE REDIS
REDIS_HOST=redis
